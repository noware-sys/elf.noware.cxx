#.PHONY: clean
#.PHONY : all, clean

folder = .sqlite
extension = .rcp

all:
	$(foreach recipe, $(wildcard $(folder)/*$(extension)), $(MAKE) -w -C $(PWD)/$(folder) --file=`basename $(recipe)` all)
clean:
	$(foreach recipe, $(wildcard $(folder)/*$(extension)), $(MAKE) -w -C $(PWD)/$(folder) --file=`basename $(recipe)` clean)
test:
	#cd $(folder)\
	$(foreach recipe, $(wildcard $(folder)/*$(extension)), echo $(PWD)//`basename $(recipe)`)
