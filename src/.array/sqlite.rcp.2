#.PHONY: clean
#.PHONY : all, clean

#folder = .sqlite
#extension = .rcp

translator = ../../tool/string.literal.raw.sh
delimiter = ___

out = entity.hxx entity.id.hxx entity.id.used.seq.hxx entity.id.next.seq.hxx entity.id.avail.seq.hxx entity.key.used.seq.hxx entity.key.used.expl.seq.hxx entity.key.next.seq.hxx entity.key.avail.seq.hxx

all: $(out)

clean:
	rm --force *.hxx;

entity.hxx: entity.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);
entity.id.hxx: entity.id.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);

entity.id.used.seq.hxx: entity.id.used.seq.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);
entity.id.next.seq.hxx: entity.id.next.seq.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);
entity.id.avail.seq.hxx: entity.id.avail.seq.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);

entity.key.used.seq.hxx: entity.key.used.seq.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);
entity.key.used.expl.seq.hxx: entity.key.used.expl.seq.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);
entity.key.next.seq.hxx: entity.key.next.seq.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);
entity.key.avail.seq.hxx: entity.key.avail.seq.sql
	$(translator) `echo -e -n '$(@)' | sed 's/hxx$\/sql/' -` $(@) $(delimiter);
